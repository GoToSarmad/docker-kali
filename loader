#!/bin/bash
set -euo pipefail

db(){
	service postgresql start
	until psql -h 127.0.0.1 msf msf -c '\q'; do
		sleep 2
	done
}
if [ -z "${1:-}" ]; then
	exec bash
elif [ "$1" = "msf" ] || [ "$1" = "msfconsole" ]; then
	shift
	db
	exec msfconsole -x "set -g CHOST 0.0.0.0; set -g LHOST ${LHOST:-0.0.0.0};" "$@"
elif [ "$1" = "msfd" ]; then
	shift
	db
	exec msfd -f -a 0.0.0.0 -s "$@"
elif [ "$1" = "dradis" ]; then
	redis-server &
	cd /pentest/dradis-ce/
	exec bundle exec rake resque:work &
	exec bundle exec rails server -b 0.0.0.0
elif [ "$1" = "cache" ]; then
	shift
	if [ "$1" = "build" ]; then
		shift
		db
		msfconsole -x '/loader cache watch'
		service postgresql stop
	elif [ "$1" = "watch" ]; then
		shift
		old=0
		new=0
		until [ "$new" -gt 3000 ] && [ "$new" -eq "$old" ]; do
			old="$new"
			new="$(psql -U msf -h 127.0.0.1 msf -At -c 'select count(*) from module_details' || echo "0")"
			echo "Module cache is now: $new"
			sleep 10
		done
		exit
	fi
fi
exec "$@"
